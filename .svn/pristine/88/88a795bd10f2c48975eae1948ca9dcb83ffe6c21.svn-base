<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearlayout_match_vertical_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_drawablePadding22"
        android:orientation="horizontal"
        android:background="@color/titlebar_green">
        <TextView
            android:layout_width="@dimen/common_drawablePadding63"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:text="灌溉时长"
            android:textSize="@dimen/text14"/>
        <TextView
            android:id="@+id/ir_totalTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/text_color_white"
            android:text=" "
            android:textSize="@dimen/text14"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_drawablePadding48"
        android:background="@color/background_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_drawablePadding22"
            android:background="@color/background_white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_drawablePadding1"
            android:layout_marginLeft="@dimen/common_drawablePadding3">
            <TextView
                android:id="@+id/ir_titleTime"
                android:paddingLeft="@dimen/common_drawablePadding1"
                android:paddingRight="@dimen/common_drawablePadding1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/background_dark_gray"
                android:textColor="@color/text_color_white"
                android:text="时间"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/ir_onTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" 
                android:gravity="center|left"
                android:textColor="@color/text_color_blue"
                android:text=" "
                android:textSize="@dimen/text14"/>
            <TextView
                android:layout_width="@dimen/common_drawablePadding3"
                android:layout_height="match_parent" 
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:text=";"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/ir_offTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="@color/text_color_pink"
                android:text=" "
                android:textSize="@dimen/text14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_drawablePadding22"
            android:background="@color/background_white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_drawablePadding1"
            android:layout_marginLeft="@dimen/common_drawablePadding3">
            <TextView
                android:id="@+id/ir_titleSum"
                android:paddingLeft="@dimen/common_drawablePadding1"
                android:paddingRight="@dimen/common_drawablePadding1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:background="@color/background_dark_gray"
                android:textColor="@color/text_color_white"
                android:text="用量"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/ir_waterSum"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="@color/text_color_blue"
                android:text=" "
                android:textSize="@dimen/text14"/>
            <TextView
                android:layout_width="@dimen/common_drawablePadding3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_color_black"
                android:text=";"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/ir_electSum"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="@color/text_color_pink"
                android:text=" "
                android:textSize="@dimen/text14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
