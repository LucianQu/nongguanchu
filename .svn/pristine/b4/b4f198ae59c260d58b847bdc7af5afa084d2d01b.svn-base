<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_black"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/pump_input_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="@dimen/common_drawablePadding80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/pump_warn"/>
        <TextView
            android:layout_marginTop="@dimen/common_drawablePadding15.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_white"
            android:background="#00000000"
            android:textSize="@dimen/text14.5"
            android:text="关闭状态打开水泵会造成设备损坏!"/>
        <TextView
            android:layout_marginTop="@dimen/common_drawablePadding13.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text14.5"
            android:background="#00000000"
            android:text="确认阀门已打开!"/>
        <EditText
            android:id="@+id/pump_input_pw"
            android:layout_marginTop="@dimen/common_drawablePadding27.5"
            android:layout_width="193.5dp"
            android:layout_height="48dp"
            android:background="@mipmap/pump_input_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/text15.5"
            android:textColor="@color/background_white"
            android:textColorHint="@color/background_dark_gray"/>
        <TextView
            android:id="@+id/pump_pw_err"
            android:layout_marginTop="@dimen/common_drawablePadding5.5"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_red"
            android:background="#00000000"
            android:textSize="@dimen/text11.5"
            android:text="密码错误"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_drawablePadding32.5"
            android:gravity="center">
            <ImageView
                android:id="@+id/pump_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@mipmap/pump_fail"/>
            <ImageView
                android:id="@+id/pump_success"
                android:layout_marginLeft="@dimen/common_drawablePadding67"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:src="@mipmap/pump_success"/>
        </LinearLayout>
    </LinearLayout>

    <!--等待界面-->
    <LinearLayout
        android:id="@+id/pump_wait_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请稍等!"
            android:textSize="@dimen/text15"
            android:textColor="@color/text_color_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_drawablePadding17.5"
            android:src="@mipmap/pump_progess"/>
    </LinearLayout>
    <!--成功界面-->
    <LinearLayout
        android:id="@+id/pump_success_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="成功!"
            android:textSize="@dimen/text15"
            android:textColor="@color/text_color_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_drawablePadding17.5"
            android:src="@mipmap/pump_success"/>
    </LinearLayout>
    <!--失败界面-->
    <LinearLayout
            android:id="@+id/pump_fail_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="失败!"
                android:textSize="@dimen/text15"
                android:textColor="@color/text_color_white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_drawablePadding17.5"
                android:src="@mipmap/pump_fail"/>
    </LinearLayout>
</LinearLayout>
