<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mine_linearlayout"
    android:background="@color/background_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/mine_linearlayoutTitle"
        android:gravity="left|center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/common_drawablePadding5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginLeft="@dimen/common_drawablePadding5"
                android:textSize="@dimen/text14"
                android:textColor="@color/text_color_green"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="-80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的"
            android:textStyle="bold"
            android:textSize="@dimen/text18"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/homepage_title"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_drawablePadding32.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新疆奎管处智能灌溉系统"
            android:textSize="@dimen/text23"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_drawablePadding17.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎登录"
            android:textSize="@dimen/text15"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_linearlayoutExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_drawablePadding130"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/mine_logout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="退出"
            android:textSize="@dimen/text20"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_drawablePadding12"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/mine_logout"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mine_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="版本:1.0"
            android:textSize="@dimen/text15"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/common_drawablePadding15"
        android:layout_marginLeft="58dip"
        android:layout_marginBottom="@dimen/common_drawablePadding10"
        android:gravity="bottom|left|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="版权所有:北京奥特美克科技股份有限公司"
            android:textSize="@dimen/text12"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="技术支持:北京奥特美克科技股份有限公司"
            android:textSize="@dimen/text12"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="联系电话:010&#8211;82893548"
            android:textSize="@dimen/text12"
            android:textColor="@color/text_color_black"/>

    </LinearLayout>

</LinearLayout>
