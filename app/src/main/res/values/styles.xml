<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 标题relativelayout -->
    <style name="tab_titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/titlebar_green</item>
    </style>
    <!-- 标题textview -->
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 返回 -->
    <style name="TitleBack">
        <item name="android:layout_width">7.5dp</item>
        <item name="android:layout_height">12.5dp</item>
        <item name="android:background">@mipmap/ic_back</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>
    <!-- title右侧 -->
    <style name="Titleright">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@mipmap/ic_add_more</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--高德地图主题-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="viewtext16_style" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="viewtext14_style" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="viewtext16_lightgray_style" parent="viewtext16_style">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="viewtext16_black_style" parent="viewtext16_style">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="viewtext16_white_style" parent="viewtext16_style">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="viewtext16_darkgray_style" parent="viewtext16_style">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="viewtext16_red_style" parent="viewtext16_style">
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="viewtext14_white_style" parent="viewtext14_style">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="viewtext14_gray_style" parent="viewtext14_style">
        <item name="android:textColor">@color/text_color_dark_gray</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="linearlayout_wrap_vertical_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearlayout_wrap_horizontal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearlayout_match_vertical_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearlayout_match_horizontal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="layout_width_height_match_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="layout_width_height_wrap_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_multLine2_style">
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">2</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="textView_multLine3_style">
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">3</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="textView_multLine4_style">
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">4</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="layout_width_height_wrap_marginleft5_style" parent="@style/layout_width_height_wrap_style">
        <item name="android:layout_marginLeft">@dimen/common_drawablePadding5</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="layout_width_height_match_marginleft5_style" parent="@style/layout_width_height_match_style">
        <item name="android:layout_marginLeft">@dimen/common_drawablePadding5</item>
    </style>


    <style name="imageview_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="devicestatus_imageview_hWrap_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="devicestatus_imageview_vWrap_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="devicestatus_imageview_h22dp_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_drawablePadding23</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
